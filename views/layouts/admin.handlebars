<body>

  <style type="text/css">
  @import url('https://fonts.googleapis.com/css?family=Gothic+A1|Kaushan+Script|Libre+Baskerville|Lobster');
  .navbar-brand  span{
    color: gray;
    font-size:25px;font-weight:700;letter-spacing:0.1em;
    font-family: 'Kaushan Script','Helvetica Neue',Helvetica,Arial,cursive;
    margin: 0;
    padding: 20px 35px 15px 35px;
  }
  .navbar-brand {
    color: black !important;
    font-size:25px;
    font-family: 'Kaushan Script','Helvetica Neue',Helvetica,Arial,cursive;
    font-weight:700;
    letter-spacing:0.1em;
    margin: 0;
    padding: 20px 40px 15px 40px;
  }
  ul, ol {
    list-style: none inside;
    margin: 0;
    padding: 0;
  }
  h3{
    font-size: 20px;
    line-height: 36px;
    font-weight: 600;
    margin: 0;
    padding: 0px;
    text-transform: uppercase;
    color: black;
  }
  a, a:visited {
    text-decoration: none;
  }
  .sidebar__subsections{
    position: fixed;
  }
  .sidebar__subsections ul li a, .sidebar__subsections ul li a:visited {
    color: black;
    padding: 15px 30px;
    text-decoration: none;
    display: inline-block;
    width: 100%;
    transition: all 0.4s;
    position: relative;
  }
  .sidebar__subsections ul li a:hover {
    padding: 20px 30px 20px 50px;
    letter-spacing: 2px;
  }
  .header__search input[type="text"] {
    border-radius: 50px;
    background-color: rgba(231, 231, 231, .1);
    font-size: 14px;
    border: 0;
    padding: 10px 20px;
    transition: all 0.4s;
    color: #e7e7e7;
  }
  .header__search input[type="text"]:focus {
    outline: none;
    background-color: rgba(231, 231, 231, .2);
  }
  .header__user {
    display: flex;
    align-items: center;
    flex-direction: row;
  }
  .header__user .icon {
    color: #e7e7e7;
    font-size: 20px;
    margin-left: 10px;
  }
  .content .title {
    height: 100px;
    background-color: white;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding-left: 30px;
    padding-right: 30px;
    color: #e7e7e7;
    z-index: 99;
    position: fixed;
    width: 100%;
  }
  .content__main {
    position: relative;
    display: flex;
  }
  .content__main-page {
    width: 100%;
  }
  </style>

  <div class="row" style="height: 100%;">
    <div class="col-md-2" style="padding: 20px 0px 0px 15px !important;">
      <div class="sidebar__subsections">
        <div>
          <center class="navbar-brand"><span>Thesis</span><br>Management</center>
        </div>
        <hr style="margin: 10px 20px 15px 20px !important;">
        <ul>
          <li><a href="/admin">Profile</a></li>
          <li><a href="/admin/class">Class</a></li>
          <li><a href="/admin/students">Students</a></li>
          <li><a href="/admin/faculties">Faculties</a></li>
          <li><a href="/admin/guests">Guests</a></li>
          <li><a class="nav-link" href="/logout">Log Out</a></li> 
        </ul>
      </div>
    </div>
    <div class="content col-md-10" style="padding: 0px !important;">
      <div class="content__main">
        <div class="content__main-page">
          {{{body}}}
        </div>
      </div>
    </div>
